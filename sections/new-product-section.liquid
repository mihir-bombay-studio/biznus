<link rel="stylesheet" href="{{ 'new-product-section.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="container">
  {% if section.settings.collection.size > 0 %}    
  <div class="shop-top-wrapper">
     <div class="shop-top-left">
      <div class="support-top-details-text">{{ section.settings.title}}</div>
      <div class="support-top-heading">{{ section.settings.text}}</div>
         
    </div>
  </div>
  
  <div class="product-list-wrap">
        <div class="product-list">
            <div class="item-list">
  {%- for product in section.settings.collection.products limit:3 -%}
                   
       <div class="shop-item-wrapper">
          <a href={{product.url}} class="shop-item">
            <div class="shop-imgg">
              <div class="shop-imggg">
           		<img class="shop-image" src="{{ product.featured_image | img_url:'large'}}">
              
{% if product.compare_at_price %}
         <div class="shop-sale ">Sale</div>
{% else %}
         <div class=""></div>
{% endif %}
             </div>
    		</div>
            
            
            <div class="shop-details-wrapper">
            <div class="shop-details">
              <div class="shop-item-name">{{product.title}}</div>
              <div class="price">
                 <div class="product-price">{{product.price | money_with_currency}}  </div>
                    {% if product.compare_at_price_max != 0 %}
                   <div class="product-discount">{{ product.compare_at_price_max | money_with_currency }} </div>
{% endif %}
              </div>
              </div>
            </div>
         </a>
         
         <div class="shop-button-wrapper ">
           <a href={{product.url}} class="btn  ">{{ section.settings.Details }}</a>
          </div>
        </div>
     
      {% endfor %}
     </div>
    </div>
  </div>
  <div class="shop-more ">
    <a href="{{ section.settings.more-product }}" class="btnb ">{{ section.settings.shop-more }}</a>
  </div>
  
  {% endif %}
</div>

{% schema %}
  {
    "name": "Product Section",
    
     "settings": [
          {
          "type":"text",
          "id":"title",
		  "default": "PRODUCT SESSION",
          "label": "title"
        },
        {
          "type": "text",
          "id": "text",
		  "default": "Open on 5-12-21",
          "label": "text"
        },
		{
          "type": "collection",
          "id": "collection",
           "label": "collection"
        },
		{
                "type": "text",
                "id": "Details",
                "label": "Details Button",
                "default": "Details"
            },
		{
                "type": "url",
                "id": "more-product",
                "label": "Your Button URL here"
            },
            {
                "type": "text",
                "id": "shop-more",
                "label": "Bottom Buttom ",
                "default": "View All Products"
            }
          ],



 "presets": [
    {
      "name": "Product section"
      
    }
  ]
 }
{% endschema %}


