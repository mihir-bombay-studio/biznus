{{ 'header-biznus.css' | asset_url | stylesheet_tag }}

<div class="header-fixed">
    <div class="menu-wrap">
        <div class="announce-block">
            {% for blocks in section.blocks %}
            <a class="announce" href="{{blocks.settings.announce}}">
                <div class="announce-container">
                    <div class="announce-container-wrap">
                        <div class="announce-text">
                            {{blocks.settings.announce-text}}
                        </div>
                        <div>
                            {{blocks.settings.announcement-text}}
                        </div>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
      </div>
    <div class="menu-wrap">
        <div class="biznus-header-block">
            <div class="biznus-header-container">
                <div class="biznus-header-container-wrap">
                    {%- if section.settings.logo != blank -%}
                    <a href="https://bit.ly/MeetAdnan" class="logo">
                        <img class="biznus-logo" src="{{section.settings.logo |  img_url: '30x'}}">
                    </a>
                    {%- else -%}
                    <div class="logo">
                        {%- include "company-logo" -%}
                    </div>
                    {%- endif -%}
  
                    <div class="biznus-header-rightside">
                        <nav class="biznus-header-nav">
                            {% for link in linklists.main-menu.links %}
                            <a class="biznus-home-list" href="{{ link.url }}">{{ link.title }}</a>
                            {% endfor %}
                        </nav>
                        <nav id="mySidenav" class="sidenav" class="biznus-header-nav">
                            {% for link in linklists.main-menu.links %}
                            <a  href="javascript:void(0)" class="closebtn" onclick="closeNav()">&#9776;</a>
                            <a class="biznus-home-list" href="{{ link.url }}">{{ link.title }}</a>
                            {% endfor %}
                        </nav>
                        <a href="{{section.settings.link-cart}}" class="cart-btn">
                            {%include "icon-cart-1"%}
                            <div class="items-in-cart">{{cart.item_count}}</div>
                        </a>
                        <span class="nav-btn" onclick="openNav()">&#9776;</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}

{
    "name": "t:sections.header.name",
    "max_blocks": 1,
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "t:sections.header.settings.logo.label"
        },
        {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "t:sections.header.settings.menu.label"
        },
        {
            "type": "url",
            "id": "link-cart",
            "label": "cart page url here"
        }

    ],

        "blocks":[
        {
            "type": "select",
            "name": "Add Announcement Bar",
            "settings": [
            {
                "type": "url",
                "id": "announce",
                "label": "Your Button URL here"
            },
            {
                "type": "text",
                "id": "announce-text",
                "label": "Button Text Here",
                "default": "Announcement"

            },
            {
                "type": "text",
                "id": "announcement-text",
                "label": "Bottom Buttom goes here",
                "default": "How we're responding to COVID-19"
            }      
            ]
        }
    ]

}

{% endschema %}

