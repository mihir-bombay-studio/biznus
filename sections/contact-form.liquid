{{ 'bizinusContact.css' | asset_url | stylesheet_tag }}





<div class="contactFormMainContainer">
  <div class="contactFormContainer">
      <div class="contactFormWrapper">
          <div class="contactLeft">
              <h2>Contact Us</h2>
              <div class="ContactInfo">
                  <p> {{ section.settings.Address1 }} <br> {{ section.settings.Address2 }} <br> {{ section.settings.Address3 }} </p>
                  <p><br> <strong>General Inquiries: </strong>  (405) 555-5555 <br> <strong> Customer Support: </strong>  (405) 555-5556 </p>
              </div>
          </div>
          <div class="contactRight">
            <h2>{{ section.settings.heading | escape }}</h2>
            <p>Send us a message and we'll get back to you as soon as we can! </p>
            {%- form 'contact', id: 'ContactForm' -%}
              {%- if form.posted_successfully? -%}
                <div class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</div>
              {%- elsif form.errors -%}
                <div class="form__message">
                  <h2 class="form-status caption-large" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
                </div>
                <ul class="form-status-list caption-large" role="list">
                  <li>
                    <a href="#ContactForm-email" class="link">
                      {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                    </a>
                  </li>
                </ul>
              {%- endif -%}
              <div class="formWrapper">
                <div class="">
                  <label for="name" >Name</label>
                  <input class="inputBox" autocomplete="name" type="text" id="ContactForm-name" name="contact[{{ 'templates.contact.form.name' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="Enter your name">
                  <!-- <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label> -->
                </div>
                <div class="">
                  <label for="email" >Email</label>
                  <input
                    autocomplete="email"
                    type="email"
                    id="ContactForm-email"
                    class="inputBox"
                    name="contact[email]"
                    spellcheck="false"
                    autocapitalize="off"
                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                    aria-required="true"
                    {% if form.errors contains 'email' %}
                      aria-invalid="true"
                      aria-describedby="ContactForm-email-error"
                    {% endif %}
                    placeholder="Enter your email address"
                    required
                  >
                  <!-- <label class="field__label" for="ContactForm-email">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label> -->
                  {%- if form.errors contains 'email' -%}
                    <small class="contact__field-error" id="ContactForm-email-error">
                      <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                      <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
                    </small>
                  {%- endif -%}
                </div>
              </div>
          
              <div class="">
                <label for="message" >Your Message</label>
                <textarea
                  rows="10"
                  id="ContactForm-body"
                  class="inputBox"
                  name="contact[{{ 'templates.contact.form.comment' | t }}]"
                  placeholder="Enter Your message"
                >
                  {{- form.body -}}
                </textarea>
                <!-- <label class="form__label field__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }}</label> -->
              </div>
              <div class="">
                <button type="submit" class="submitButton">
                  Submit
                </button>
              </div>
            {%- endform -%}
          </div>
      </div>
  </div>
</div>







{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Contact form",
      "label": "Heading"
    },
	
	{
      "type": "text",
      "id": "Address1",
      "default": "Acme Outdoors",
      "label": "Address Line 1"

	},
	{
      "type": "text",
      "id": "Address2",
      "default": "123 Rainy Street",
      "label": "Address Line 2"

	},
	{
      "type": "text",
      "id": "Address3",
      "default": "Oklahoma City, OK 73129",
      "label": "Address Line 3"

	}

  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
